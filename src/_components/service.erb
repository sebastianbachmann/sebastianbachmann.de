<%= render UI::Card.new(as: "li") do %>
  <%= render UI::Card::Title.new(title, as: "h3", href:) %>

  <%= render UI::Card::Description.new do %>
    <span class="font-semibold">Beste Voraussetzung</span> <%= best_if %>
  <% end %>

  <%= render UI::Card::Description.new do %>
    <span class="font-semibold">Sie bekommen</span> <%= you_get %>
  <% end %>

  <% if price.present? %>
    <%= render UI::Card::Description.new do %>
      <span class="font-semibold">Preis</span>: <%= price %>
    <% end %>
  <% end %>

  <%= render UI::Card::Description.new(description) %>

  <%= render UI::Card::CTA.new do %>
    <%= cta %>
  <% end %>
<% end %>
